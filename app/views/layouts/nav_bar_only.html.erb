<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title + " | " if defined? @page_title %>TripHappy</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Lato:400,900' rel='stylesheet' type='text/css'>

  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= include_gon %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Google Analytics -->
<script>
   (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
   (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
   m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
   })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

   ga('create', 'UA-69165415-1', 'auto');
   ga('send', 'pageview');
</script>


</head>


<body class="<%= controller_name %> <%= action_name %>">
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '185791401759460',
      xfbml      : true,
      version    : 'v2.5'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

<div id="body-container">

  <%= render :partial => 'shared/nav' %>

  <div id="main-content-no-footer" class="<%= @transparent_nav ? 'content-in-nav' : '' %>">
    <%= yield %>
  </div>

<% if @map_page %>
  <script
    src="https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyBbL1jb6SbG8RGQME134WvJeJbd6PJEFSw&libraries=places&callback=initMap"  async defer>
  </script>

  <script>

    var map;
    var bounds;
    var polyline;
    var infowindow;
    var myLatLng = {lat: 28, lng: 0};
    function initMap() {
      map = new google.maps.Map(document.getElementById('map-holder'), {
        center: myLatLng,
        zoom: 3,
        scrollwheel: true,
        streetViewControl: false,
        panControl: false,
        mapTypeControlOptions: {position: google.maps.ControlPosition.TOP_RIGHT},
        zoomControlOptions: {position: google.maps.ControlPosition.RIGHT_TOP}
      });

      polyline = new google.maps.Polyline({
        geodesic: true,
        map: map
      });

      var contentString = '<h3>Sample Content Yo</h3>';

      infowindow = new google.maps.InfoWindow({
        content: contentString
      });

      bounds = new google.maps.LatLngBounds();
    }
  </script>
<% end %>

</div> <!-- End body-container -->

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>


</body>
</html>
