			<p>by <%= @username %></p>
			<p>1 Country - 5 Cities - 1000 km</p>
			<%= submit_tag("See more", {:class => 'btn btn-success'}) %>
		</div>
	</div>
</div>



<div class="container-fluid">
	<div class="row">
			<div class="col-md-12 col-xs-12" id="highlightedtrips-carousel">
