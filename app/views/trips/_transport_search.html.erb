
	<div class="container transportation-show">
		<div class="row">
			<% @routes.each do |route| %>
			<div class="col-xs-9 transportation-routes">
				<div class="row transportation-route-overview">
					<div class="col-xs-11 transportation-route-detailbar">
						<div class="transportation-route-summarybar" style="width:<%= route['durationMajor'].to_f / @routeLongest.to_f * 100 * 0.9 %>%">
							<% route['segments'].each do |segment| %>
								<% if segment['isMajor'].to_s == "1" %>
									<div class="route-segment-overview" style="width:<%= segment['duration'].to_f / route['durationMajor'].to_f * 100 - 1 %>%"><i class="fa fa-<%= segment['kindIcon'].to_s %> fa-lg"></i></div>
								<% end %>
							<% end %>
						</div>
						<span class="itinerary-route-duration"><%= route['durationText'] %></span>
					</div>	
					<div class="col-xs-1">
						<span class="itinerary-route-price"><%= route['indicativePrice']['currencySym'] %><%= route['indicativePrice']['price'] %></span>
					</div>
				</div>

					<div class="row transportation-segments">
						<ul class="col-xs-10 transportation-segments-all">
							<% route['segments'].each do |segment| %>
								<% if segment['isMajor'].to_s == "1" %>
									<li class="transportation-segment"><i class="fa fa-<%= segment['kindIcon'].to_s %> fa-lg"></i><%= segment['kind'].to_s.titleize + ' from ' + segment['source'].to_s + ' to ' + segment['target'].to_s %><span class="transport-book">Book Now</span></li>
								<% end %>
							<% end %>
						</ul>
					</div>


			</div>

			<% end %>
			
		</div>
	</div>

