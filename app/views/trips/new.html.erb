<% #inserting trip_id variable so javascript can read %>
<%= javascript_tag do %>
  window.tripID = <%= @trip.id %>;
<% end %>

<div class="hidden-xs" id="map-container-90">
  <div id="map-holder"></div>

  <div id="map-controls-container">
    <div id="map-controls">
      <div id="switch-trips-button" class="inline-block" data-toggle="tooltip" data-placement="top" title="Switch Trips">
        <i class="fa fa-caret-down fa-lg"></i>
      </div>

      <%= text_field_tag 'trip_name_input', '', placeholder: 'Enter a Name for Your Trip'  %>


      <div id="map-controls-buttons-container" class="inline-block map-controls-div">
        <button type="button" id="save-trip" class="btn btn-primary btn-xs">
          <span>Save</span>
        </button>
        <i data-toggle="tooltip" data-placement="top" title="Add to Favorites" class="fa fa-star-o fa-lg trip-favorite"></i>
        <i data-toggle="tooltip" data-placement="top" title="Share Trip" class="fa fa-share-alt fa-lg icon-gray"></i>
        <i data-toggle="tooltip" data-placement="top" title="More Actions" class="fa fa-ellipsis-h fa-lg icon-gray"></i>
        <!-- More Options Should Have a Dropdown for the following -->
        <!-- Embed Trip <i class="fa fa-code fa-lg"></i> -->
        <!-- Duplicate Trip <i class="fa fa-files-o fa-lg"></i> -->
        <!-- Delete Trip <i class="fa fa-trash-o fa-lg"></i> -->
      </div>
    </div>
  </div>
</div>



<div id="trip-snapshot-container" class="container-fluid">
  <div class="row">
    <div id="snapshot-toggle-bar" class="col-sm-12 text-center snapshot-toggle">
      <i class="fa fa-chevron-up snapshot-toggle-icon"></i>
    </div>
    <div id="snapshot-content" class="col-sm-12">
        <ul id="trip-snapshot-ul" class="list-inline">
          <li id="snapshot-add-destination" class="not-sortable">
            <a href="<%= add_destination_lightbox_path %>" data-colorbox="true">
              <div class="snapshot-location-content">
                  <i class="fa fa-plus-circle fa-2x add-destination-icon" data-toggle="tooltip" data-placement="right"
                     title="Add Destination"></i>
              </div>
            </a>
          </li>
        </ul>
    </div> <!-- end snapshot content -->
    <!--these should be a class of li, alternating between destination -->
    <div class="col-sm-12">
      <ul id="trip-snapshot-link-ul" class="list-inline">

      </ul>
    </div>
  </div> <!-- end row -->



</div>

<!-- Hidden templates for javascript functions -->
<li id="snapshot-location-template" class="snapshot-location hidden">
  <div class="snapshot-draggable-indicator hidden"><i class="fa fa-arrows"></i></div>
  <div class="snapshot-location-content valign-middle-parent">
    <h5 class="valign-middle-child">Hidden Template</h5>
  </div>
  <div class="snapshot-close hidden">
    <i class="fa fa-times"></i>
  </div>
</li>

<div id="infowindow-tempalte" class="">
  <div class="infowindow-content">
    <h5>Location Name</h5>
    <div>
      <a href="#" class="block">
        <i class="fa fa-calendar-plus-o"></i> Add Arrival Date
      </a>
    </div>
    <button class="btn btn-xs btn-danger">Remove</button>
    <button class="btn btn-xs btn-success">
      <a href="<%= add_destination_lightbox_path %>" data-colorbox="true" class="no-style-link">Add Next Destination</a>
    </button>
  </div>
</div>

<!-- Warning box for lightbox -->
<div class="lightbox-warning-template" class="hidden">
  <div id="lightbox-warning-content" class="alert alert-danger alert-dismissible" role="alert">
    Please select a destination from the dropdown.
  </div>
</div>
