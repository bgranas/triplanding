<% #inserting trip_id variable so javascript can read %>
<%= javascript_tag do %>
  window.tripID = <%= @trip.id %>;
<% end %>

<div class="hidden-xs" id="map-container-90">
  <div id="map-holder"></div>

  <div id="map-controls-container">
    <div id="map-controls">
      <div id="switch-trips-button" class="inline-block" data-toggle="tooltip" data-placement="top" title="Switch Trips">
        <i class="fa fa-caret-down fa-lg"></i>
      </div>

      <%= text_field_tag 'trip_name_input', '', placeholder: 'Enter a Name for Your Trip'  %>


      <div id="map-controls-buttons-container" class="inline-block map-controls-div">
        <button type="button" id="save-trip" class="btn btn-primary btn-xs">
          <span>Save</span>
        </button>
        <i data-toggle="tooltip" data-placement="top" title="Add to Favorites" class="fa fa-star-o fa-lg trip-favorite"></i>
        <i data-toggle="tooltip" data-placement="top" title="Share Trip" class="fa fa-share-alt fa-lg icon-gray"></i>
        <i data-toggle="tooltip" data-placement="top" title="More Actions" class="fa fa-ellipsis-h fa-lg icon-gray"></i>
        <!-- More Options Should Have a Dropdown for the following -->
        <!-- Embed Trip <i class="fa fa-code fa-lg"></i> -->
        <!-- Duplicate Trip <i class="fa fa-files-o fa-lg"></i> -->
        <!-- Delete Trip <i class="fa fa-trash-o fa-lg"></i> -->
      </div>
    </div>
  </div>
</div>



<div id="trip-snapshot-container" class="container-fluid">
  <div class="row">
    <div id="snapshot-toggle-bar" class="col-sm-12 text-center snapshot-toggle">
      <i class="fa fa-chevron-up snapshot-toggle-icon"></i>
    </div>
    <div id="snapshot-content" class="col-sm-12">
        <ul id="trip-snapshot-ul" class="list-inline">
          <!-- Old Circle Layout for snapshot location
          <li class="snapshot-location">
            <div class="snapshot-location-container">
              <div class="snapshot-location-name"><span>Shanghai</span></div>
              <div class="snapshot-location-icon"><i class="fa fa-globe fa-2x location-icon"></i></div>
              <div class="snapshot-location-controls hidden">
                <i class="fa fa fa-plus-circle"></i>
                <i class="fa fa-arrows"></i>
                <i class="fa fa-minus-circle"></i>
              </div>
            </div>
          </li>
          -->
          <li id="snapshot-location-template" class="snapshot-location hidden">
            <div class="snapshot-location-container">
