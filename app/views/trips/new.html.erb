          <li id="snapshot-add-destination">
            <div class="snapshot-location-container">
              <a href="/blank/add_destination_helper" data-colorbox="true">
                <i class="fa fa-plus-circle fa-2x add-destination" data-toggle="tooltip" data-placement="right"
                   title="Add Destination"></i>
              </a>
            </div>
          </li>
