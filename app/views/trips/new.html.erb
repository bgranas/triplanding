  <div class="itinerary-icon transportation-icon">
    <div class="itinerary-transportation-vertical"></div>
    <i class="fa fa-circle-o fa-2x"></i>
    <div class="itinerary-transportation-vertical"></div>
  </div>

  <div class="col-sm-11 col-sm-offset-1">
