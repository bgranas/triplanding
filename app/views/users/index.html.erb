<%= render :partial => 'shared/admin_navigation' %>

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12">
			<h1>Users</h1>
			<table class="table">
				<tr>
					<th>#</th>
					<th>User ID</th>
					<th>Name</th>
					<th>Email</th>
					<th>Blog URL</th>
					<th>Profile picture path</th>
					<th>Hometown</th>
					<th>Country</th>
					<th>Profile URL</th>
					<th>Actions</th>
				</tr>
				<% i=0 %>
				<% @users.each do |user| %>
				<tr>
					<td><%= i+=1 %> </td>
					<td><%= user.id %> </td>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
					<td><%= user.blog_url %></td>
					<td><%= user.profile_picture_path %></td>
					<td><%= user.hometown %></td>
					<td><%= user.country %></td>
					<td><%= user.profile_url %></td>
					<td>
						<%= link_to("Show", {:action => :show, :id => user.id}) %>
						<%= link_to("Edit", {:action => :edit, :id => user.id}) %>
						<%= link_to("Delete", {:action => :delete, :id => user.id}) %>
					</td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

