

 <div id="login-container">
    <a href="<%= user_omniauth_authorize_path(:facebook) %>"
      class="btn btn-block btn-social btn-facebook"
      data-no-turbolink="true">
      <i class="fa fa-facebook"></i> Sign in with Facebook
    </a>

  <a href="<%= user_omniauth_authorize_path(:google_oauth2) %>"
      class="btn btn-block btn-social btn-google"
      data-no-turbolink="true">
      <i class="fa fa-google"></i> Sign in with Google
  </a>

  <a href="<%= user_omniauth_authorize_path(:instagram) %>"
      class="btn btn-block btn-social btn-instagram"
      data-no-turbolink="true">
      <i class="fa fa-instagram"></i> Sign in with Instagram
  </a>

  <div class="signup-or-separator hidden-xs">
    <span class="h6 signup-or-separator-text">or</span>
    <hr>
  </div>

  <% flash.each do |name, msg| %>
    <% if msg.class == Array %>
      <% msg.each do |message| %>
        <%= content_tag :p, message, :id => "flash_#{name}", class: 'error-message' %>
      <% end %>
    <% else %>
      <%= content_tag :p, msg, :id => "flash_#{name}", class: 'error-message' %>
    <% end %>
  <% end %>
  <%= form_for(:user, url: session_path(:user), remote: false, :html => {:id => "login-form"}) do |f| %>
    <div class="input-group margin-bottom-sm">
      <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
      <%= f.email_field :email, class: 'vertical-stack-form',
                        :placeholder => 'E-mail', :required => true %>
    </div>

    <div class="input-group margin-bottom-sm">
      <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
      <%= f.password_field :password, autocomplete: "off", class: 'vertical-stack-form',
                           :placeholder => 'Password', :required => true %>
    </div>

      <%= f.check_box :remember_me , class: "initial-width" %>
      <%= f.label :remember_me %>

    <%= f.submit "Login", class: 'btn btn-primary btn-block' %>
  <% end %>
</div>

