
  <!-- Blank forms disables Chrome Autocomplete,
       which interfers with Google's Autocomplete -->
  <input type="text" name="prevent_autofill" id="prevent_autofill" value="" style="display:none;" />
  <input type="password" name="password_fake" id="password_fake" value="" style="display:none;" />
  <input type="password" name="password" id="password" value="" style="display:none;" />


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :blog_url %><br />
    <%= f.text_field :blog_url %>
  </div>

  <div class="field">
    <%= f.label :profile_picture_path %><br />
    <%= f.text_field :profile_picture_path %>
  </div>

  <div class="field">
      <%= f.label :hometown %><br />
      <%= f.text_field :hometown, :id => "location-query", :onFocus => "geolocate()" %>
    <ul id="location-query-results">
    </ul>
  </div>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :profile_url %><br />
    <%= f.text_field :profile_url %>
  </div>



